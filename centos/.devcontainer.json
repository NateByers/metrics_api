{
  "name": "Centos",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "centos",
  "shutdownAction": "none",
  // Open the sub-folder with the source code
  "workspaceFolder": "/workspace/centos",
  "remoteUser": "root",
  "runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined",
		"--privileged"
	]
}